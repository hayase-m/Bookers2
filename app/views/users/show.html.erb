<div class="containar px-5">
  <div class="row">

    <div class="col-md-3">
        <%= render 'info', book: @book %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <div><%= image_tag book.user.get_profile_image(100,100) %></div>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>