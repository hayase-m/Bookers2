<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>Follow Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if @users.empty? %>
            <p>ユーザーはいません</p>
          <% else %>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= image_tag user.get_profile_image(50,50) %>
                </td>
                <td><%= user.name %></td>
                <td>
                  <%= link_to "Show", user_path(user) %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
