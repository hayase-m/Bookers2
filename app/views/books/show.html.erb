<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', book: @new_book, user: @user %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h1>Book detail</h1>
      <table class="table table-hover">
        <tbody>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
              <div><%= @book.user.name %></div>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
          </td>
          <td id="favorite-btn-<%= @book.id %>">
            <%= render "favorites/favorite-btn", book: @book %>
          </td>
          <td id="comment_counter">
            <%= render "book_comments/counter", book: @book %>
          </td>
        </tbody>
      </table>
      <div id="comment_index">
        <%= render "book_comments/index", book: @book %>
      </div>
      <div>
        <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>
